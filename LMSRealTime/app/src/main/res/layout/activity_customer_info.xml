<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorPrimaryLight"    android:orientation="vertical"    android:focusable="true"    android:focusableInTouchMode="true"    tools:context=".view.CustomerInfo">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:id="@+id/verifyMsg"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="8dp"            android:visibility="gone"            android:text="Email Not Verfied !"            android:textColor="#C2185B"            android:textSize="20sp"            android:textStyle="bold"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintVertical_bias="0.02"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <Button            android:id="@+id/resendCode"            android:layout_width="wrap_content"            android:layout_height="30dp"            android:visibility="gone"            android:text="Verify Now"            android:textColor="@color/md_white_1000"            android:background="@drawable/button_click_red"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/verifyMsg"            app:layout_constraintTop_toTopOf="@+id/verifyMsg" />        <ImageView            android:id="@+id/profileImage"            android:layout_width="95dp"            android:visibility="gone"            android:layout_height="95dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:layout_constraintVertical_bias="0.073"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0.5"            app:srcCompat="@mipmap/ic_launcher" />        <EditText            android:id="@+id/profileName"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:layout_marginEnd="16dp"            android:hint="Your Name"            android:inputType="textPersonName"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_person"            app:layout_constraintTop_toBottomOf="@+id/lblName" />        <EditText            android:id="@+id/profileEmail"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:layout_marginEnd="16dp"            android:hint="Your Email Address"            android:inputType="textEmailAddress"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_email"            app:layout_constraintTop_toBottomOf="@+id/lblEmail" />        <EditText            android:id="@+id/profilePhone"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:hint="Phone Number"            android:inputType="phone"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_phone"            app:layout_constraintTop_toBottomOf="@+id/lblPhone" />        <TextView            android:id="@+id/lblName"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Full Name"            app:layout_constraintHorizontal_bias="0.0"            app:layout_constraintStart_toEndOf="@+id/image_person"            app:layout_constraintTop_toTopOf="@+id/image_person" />        <TextView            android:id="@+id/lblEmail"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Email"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_email"            app:layout_constraintTop_toTopOf="@+id/image_email" />        <ImageView            android:id="@+id/image_person"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileImage"            app:layout_constraintVertical_bias="0.0"            app:srcCompat="@drawable/ic_person_black_24dp"            tools:ignore="VectorDrawableCompat" />        <ImageView            android:id="@+id/image_email"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileName"            app:srcCompat="@drawable/ic_email_black_24dp"            tools:ignore="VectorDrawableCompat" />        <ImageView            android:id="@+id/image_phone"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileEmail"            app:srcCompat="@drawable/ic_local_phone_black_24dp"            tools:ignore="VectorDrawableCompat" />        <TextView            android:id="@+id/lblPhone"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Phone"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_phone"            app:layout_constraintTop_toTopOf="@+id/image_phone" />        <ImageView            android:id="@+id/image_street"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profilePhone"            app:srcCompat="@drawable/ic_street"            tools:ignore="VectorDrawableCompat" />        <TextView            android:id="@+id/lblStreet"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Street"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_street"            app:layout_constraintTop_toTopOf="@+id/image_street" />        <EditText            android:id="@+id/profileStreet"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:hint="Your Street"            android:inputType="textPersonName"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_street"            app:layout_constraintTop_toBottomOf="@+id/lblStreet" />        <ImageView            android:id="@+id/image_city"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileStreet"            app:srcCompat="@drawable/ic_location_city_black_24dp"            tools:ignore="VectorDrawableCompat" />        <TextView            android:id="@+id/lblCity"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="City"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_city"            app:layout_constraintTop_toTopOf="@+id/image_city" />        <EditText            android:id="@+id/profileCity"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:hint="Your City"            android:inputType="textPersonName"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_city"            app:layout_constraintTop_toBottomOf="@+id/lblCity" />        <ImageView            android:id="@+id/image_province"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileCity"            app:srcCompat="@drawable/ic_province"            tools:ignore="VectorDrawableCompat" />        <TextView            android:id="@+id/lblProvince"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Province"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_province"            app:layout_constraintTop_toTopOf="@+id/image_province" />        <EditText            android:id="@+id/profileProvince"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:hint="Your Province"            android:inputType="textPersonName"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_province"            app:layout_constraintTop_toBottomOf="@+id/lblProvince" />        <ImageView            android:id="@+id/image_zipcode"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginStart="16dp"            android:layout_marginTop="24dp"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileProvince"            app:srcCompat="@drawable/ic_zip_black_24dp"            tools:ignore="VectorDrawableCompat" />        <TextView            android:id="@+id/lblZipCode"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginEnd="16dp"            android:text="Zip Code"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_zipcode"            app:layout_constraintTop_toTopOf="@+id/image_zipcode" />        <EditText            android:id="@+id/profileZip"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="8dp"            android:layout_marginTop="8dp"            android:hint="Your Zip Code"            android:inputType="numberDecimal"            android:textColorHint="@color/black"            android:textSize="16sp"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toEndOf="@+id/image_zipcode"            app:layout_constraintTop_toBottomOf="@+id/lblZipCode" />        <Button            android:id="@+id/btnCancel"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginStart="84dp"            android:layout_marginTop="14dp"            android:layout_marginRight="4dp"            android:layout_marginEnd="4dp"            android:layout_weight="1"            android:background="@drawable/button_click_red"            android:text="Cancel"            android:onClick="Cancel"            android:textStyle="bold"            android:layout_marginBottom="10dp"            app:layout_constraintRight_toLeftOf="@+id/btnSave"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/profileZip" />        <Button            android:id="@+id/btnSave"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_marginTop="14dp"            android:layout_marginEnd="64dp"            android:layout_weight="1"            android:background="@drawable/button_click"            android:text="Save"            android:onClick="Save"            android:textStyle="bold"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintLeft_toRightOf="@+id/btnCancel"            app:layout_constraintTop_toBottomOf="@+id/profileZip" />    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>