<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/md_white_1000"
    android:layout_height="match_parent"
    tools:context=".view.Category1Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:theme="@style/Widget.AppCompat.Toolbar"
        android:weightSum="1">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 1"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/md_white_1000"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="Fan"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="2" />

                    <com.travijuu.numberpicker.library.NumberPicker
                        android:id="@+id/Fan_number_picker"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@color/md_white_1000"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/md_white_1000"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Lights"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/border"
                        android:textSize="20sp"
                        android:layout_weight="2" />



                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/md_white_1000"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="CFL"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_weight="2" />

                    <com.travijuu.numberpicker.library.NumberPicker
                        android:id="@+id/CFL_number_picker"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@color/md_white_1000"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                 <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="LED"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2" />

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/LED_number_picker"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/black" />

            </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                  <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Incandescent"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/Incandescent_number_picker"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/black" />

            </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Halogen"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />


                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/Halogen_number_picker"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/black" />

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="11dp"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:paddingBottom="12dp"
                android:layout_below="@+id/body2"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/button_click_primary"
                    android:padding="12dp"
                    android:onClick="Save"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

