<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.ScheduleManualCookingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:theme="@style/Widget.AppCompat.Toolbar"
        android:weightSum="1">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Cooking"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <LinearLayout
                        android:layout_weight="2.5"
                        android:background="#47CB80"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textAlignment="center"
                            android:background="@color/md_white_1000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Appliance Name"
                            android:padding="5dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_weight="0.75"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:background="#47CB80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/starttime"
                            android:textAlignment="center"
                            android:background="@color/md_white_1000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start Time"
                            android:padding="5dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.75"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:background="#47CB80"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/endTime"
                            android:textAlignment="center"
                            android:background="@color/md_white_1000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="End Time"
                            android:padding="5dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout

                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMCItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fadeScrollbars="true"
                        android:foregroundGravity="center_horizontal|center"
                        tools:listitem="@layout/layout_for_schedule_manual">

                    </androidx.recyclerview.widget.RecyclerView>


                </LinearLayout>
                <LinearLayout

                    android:id="@+id/NoData"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_marginTop="32dp"
                    android:paddingBottom="12dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="Please Set Home Appliances by clicking Appliance icon in Main screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="11dp"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:paddingBottom="12dp"
                android:layout_below="@+id/body2"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/button_click_primary"
                    android:padding="12dp"
                    android:text="Save" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>
</LinearLayout>
