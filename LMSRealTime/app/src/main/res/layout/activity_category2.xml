<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/md_white_1000"
    android:layout_height="match_parent"
    tools:context=".view.Category2Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:theme="@style/Widget.AppCompat.Toolbar"
        android:weightSum="1">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category 2"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="11dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Blender"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/Blender_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rice Cooker"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/RiceCooker_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />



            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hot Plate"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_weight="2" />


                <ToggleButton
                    android:id="@+id/HotPlate_Switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Oven"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />


                <ToggleButton
                    android:id="@+id/Oven_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Air Fryers"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />


                <ToggleButton
                    android:id="@+id/AirFryers_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />



            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Micro Wave Oven"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/MicroWaveOven_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Electric Kettle"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/ElectricKettle_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Hand Mixture"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/HandMixture_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/md_white_1000"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sandwich toaster"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_weight="2" />

                <ToggleButton
                    android:id="@+id/SandwichToaster_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Yes"
                    android:textOn="no" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="11dp"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progressBar"

                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_marginStart="11dp"
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/body2"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:background="@drawable/button_click_primary"
                android:padding="12dp"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</LinearLayout>
